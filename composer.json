{
    "name": "mead-steve/mono-snag",
    "description": "Bugsnag integration for monolog. An abstract handler that sends messages to Bugsnag",
    "keywords": ["bugsnag", "monolog", "logging", "error"],
    "minimum-stability": "stable",
    "license": "MIT",
    "authors": [
        {
            "name": "Steve B",
            "email": "meadsteve@gmail.com"
        }
    ],

    "require" : {
        "php": "^7.2 || ^8.0",
        "monolog/monolog": "^2.0",
        "bugsnag/bugsnag": "^3.4"
    },

    "require-dev": {
        "phpunit/phpunit": "^8.5.8 || ^9.3.8",
        "squizlabs/php_codesniffer": "^3.5",
        "phpspec/prophecy-phpunit": "^2.0"
    },

    "autoload": {
        "psr-4": {
            "MeadSteve\\MonoSnag\\": "src/"
        }
    }
}
