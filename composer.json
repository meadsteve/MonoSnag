{
    "name": "mead-steve/mono-snag",
    "description": "Bugsnag integration for monolog. An abstract handler that sends messages to Bugsnag",
    "keywords": ["bugsnag", "monolog", "logging", "error"],
    "minimum-stability": "stable",
    "license": "MIT",
    "authors": [
        {
            "name": "Steve B",
            "email": "meadsteve@gmail.com"
        }
    ],

    "require" : {
        "php": "^5.6 | ^7.0",
        "monolog/monolog": "^1.7.0",
        "bugsnag/bugsnag": "^2.2.5"
    },

    "require-dev": {
        "phpunit/phpunit": "^5.2",
        "squizlabs/php_codesniffer": "^1.5.0",
        "satooshi/php-coveralls"  : "~0.6"
    },

    "autoload": {
        "psr-4": {
            "MeadSteve\\MonoSnag\\": "src/"
        }
    }
}
